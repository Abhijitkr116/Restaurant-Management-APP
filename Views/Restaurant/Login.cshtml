<style>
    main {
        min-height: 94vh;
        width: 100%;
    }

    h2 {
        font-family: 'narnia';
        font-weight: 100;
        letter-spacing: 0.1rem;
        margin-bottom: 1.5rem;
    }

    .circle {
        height: 85%;
        width: 70%;
        background-color: #fff4d9;
        border-radius: 50%;
        animation: float 1s ease-in-out infinite, wave 4s ease-in-out infinite, opacityChange 3s ease-in-out infinite;
    }

    .Login .first-row {
        border: 1px solid #000;
        border-radius: 1rem;
    }

        .Login .first-row img {
            height: 60%;
            width: 100%;
        }

    .Login .second-row {
        font-family: poppins;
    }



    @@media all and (max-width: 600px) {

        .Login .first-row {
            border: none;
        }
    }


    /*Animations*/


    @@keyframes float {
        0%, 100% {
            transform: translateY(0) translateX(0);
        }

        50% {
            transform: translateY(-20px) translateX(10px);
        }
    }

    @@keyframes wave {
        0%, 100% {
            transform: rotate(-40deg);
            background-color: #f9f1dd;
        }

        50% {
            transform: rotate(40deg);
            background-color: #ffecbb;
        }
    }

    @@keyframes opacityChange {
        0%, 100% {
            opacity: 0.5;
        }

        50% {
            opacity: 0.7;
        }
    }
</style>