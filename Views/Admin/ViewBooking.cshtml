<script>

    function filterTable() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("dateFilter");
        filter = input.value;
        table = document.getElementById("bookingTable");
        tr = table.getElementsByTagName("tr");

        for (i = 0; i < tr.length; i++) {
            td = tr[i].getAttribute("data-date");
            if (td) {
                if (td.indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }

    // JavaScript to handle date filtering
    document.getElementById('filterForm').addEventListener('submit', function (event) {
        event.preventDefault(); // Prevent form submission

        const selectedDate = document.getElementById('filterDate').value;
        const rows = document.querySelectorAll('#bookingTable tr');

        rows.forEach(row => {
            const dateCell = row.querySelector('td:nth-child(4)');
            if (dateCell) {
                const rowDate = dateCell.textContent.trim();
                if (selectedDate === "" || rowDate.includes(selectedDate)) {
                    row.style.display = ""; // Show row
                } else {
                    row.style.display = "none"; // Hide row
                }
            }
        });
    });
</script>

